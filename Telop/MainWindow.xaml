<Window x:Class="Telop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1"
                      x:Name="mediaElement" Margin="24,24,24,24" Source="ABCDE.mp4"/>
        <TextBlock x:Name="MediaTitles" Text="" HorizontalAlignment="Left" Margin="72,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="67" Width="270" FontSize="48" Foreground="White" >
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="4" Opacity="0.4" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
